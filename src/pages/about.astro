---
import BaseLayout from '../layouts/BaseLayout.astro';
import Terminal from '../components/interactive/Terminal';
import GlassCard from '../components/ui/GlassCard';
import ExperienceTimeline from '../components/experience/ExperienceTimeline';
import SectionNav from '../components/ui/SectionNav';
import WavyGradient from '../components/ui/WavyGradient';

const sections = [
  { id: 'profile', label: 'Profile' },
  { id: 'experience', label: 'Experience' },
  { id: 'tech-stack', label: 'Tech Stack' },
  { id: 'education', label: 'Education' },
];
---

<BaseLayout title="About | Portfolio" description="Learn more about me and my journey">
  <WavyGradient client:load />
  <section class="py-12 px-4">
    <div class="max-w-7xl mx-auto">
      <!-- Header -->
      <div class="text-center mb-12 lg:ml-64">
        <h1 class="text-4xl md:text-5xl font-bold mb-4">
          <span class="gradient-text-animated">About Me</span>
        </h1>
        <p class="text-[var(--text-secondary)] text-lg max-w-2xl mx-auto">
          Engineer, builder, and lifelong learner
        </p>
      </div>

      <!-- Main Layout: Nav + Content -->
      <div class="lg:flex lg:gap-8">
        <!-- Left Sidebar Navigation - Sticky -->
        <aside class="hidden lg:block lg:w-56 lg:flex-shrink-0 lg:self-start lg:sticky lg:top-24">
          <SectionNav client:load sections={sections} />
        </aside>

        <!-- Main Content -->
        <div class="flex-1 min-w-0">
          <!-- Profile Section -->
          <section id="profile" class="pb-16">
            <div class="grid lg:grid-cols-2 gap-8 items-start">
              <!-- Profile Card -->
              <div>
                <GlassCard client:visible hover={false}>
                  <div class="flex items-center gap-4 mb-6">
                    <div class="w-20 h-20 rounded-full bg-gradient-to-br from-zinc-300 to-zinc-200 dark:from-zinc-700 dark:to-zinc-600 flex items-center justify-center text-2xl font-bold text-[var(--text-primary)]">
                      KB
                    </div>
                    <div>
                      <h2 class="text-2xl font-bold text-[var(--text-primary)]">Kaustubh Butte</h2>
                      <p class="text-[var(--text-secondary)]">Senior Software Engineer @ Uber</p>
                    </div>
                  </div>

                  <div class="prose prose-invert">
                    <p class="text-[var(--text-secondary)] leading-relaxed">
                      Hey there! I'm a software engineer passionate about building systems that scale.
                      I love diving deep into complex problems and emerging with elegant solutions.
                    </p>
                    <p class="text-[var(--text-secondary)] leading-relaxed">
                      When I'm not coding, you'll find me reading about distributed systems,
                      contributing to open source, or experimenting with new technologies.
                    </p>
                  </div>
                </GlassCard>
              </div>

              <!-- Terminal -->
              <div>
                <Terminal client:load />
              </div>
            </div>
          </section>

          <!-- Experience Section -->
          <section id="experience" class="py-16">
            <h2 class="text-2xl font-bold text-[var(--text-primary)] mb-8">Experience</h2>
            <ExperienceTimeline client:visible />
          </section>

          <!-- Tech Stack Section -->
          <section id="tech-stack" class="py-16">
            <h2 class="text-2xl font-bold text-[var(--text-primary)] mb-6">Tech Stack</h2>
            <div class="grid md:grid-cols-2 xl:grid-cols-3 gap-4">
              <GlassCard client:visible hover={false}>
                <p class="text-[var(--text-muted)] text-xs uppercase tracking-wider mb-3">Languages</p>
                <div class="flex flex-wrap gap-2">
                  {['Java', 'Go', 'Python', 'C++', 'JavaScript'].map((tech) => (
                    <span class="px-3 py-1 rounded-full bg-zinc-500/20 text-[var(--text-secondary)] text-sm">{tech}</span>
                  ))}
                </div>
              </GlassCard>

              <GlassCard client:visible hover={false}>
                <p class="text-[var(--text-muted)] text-xs uppercase tracking-wider mb-3">Architecture</p>
                <div class="flex flex-wrap gap-2">
                  {['Distributed Systems', 'Microservices', 'gRPC'].map((tech) => (
                    <span class="px-3 py-1 rounded-full bg-zinc-500/20 text-[var(--text-secondary)] text-sm">{tech}</span>
                  ))}
                </div>
              </GlassCard>

              <GlassCard client:visible hover={false}>
                <p class="text-[var(--text-muted)] text-xs uppercase tracking-wider mb-3">Data Stores</p>
                <div class="flex flex-wrap gap-2">
                  {['Kafka', 'PostgreSQL', 'Redis', 'Elasticsearch'].map((tech) => (
                    <span class="px-3 py-1 rounded-full bg-zinc-500/20 text-[var(--text-secondary)] text-sm">{tech}</span>
                  ))}
                </div>
              </GlassCard>

              <GlassCard client:visible hover={false}>
                <p class="text-[var(--text-muted)] text-xs uppercase tracking-wider mb-3">Frameworks</p>
                <div class="flex flex-wrap gap-2">
                  {['Dropwizard', 'Flask', 'React', 'Vue.js'].map((tech) => (
                    <span class="px-3 py-1 rounded-full bg-zinc-500/20 text-[var(--text-secondary)] text-sm">{tech}</span>
                  ))}
                </div>
              </GlassCard>

              <GlassCard client:visible hover={false}>
                <p class="text-[var(--text-muted)] text-xs uppercase tracking-wider mb-3">Infrastructure</p>
                <div class="flex flex-wrap gap-2">
                  {['Terraform', 'Docker', 'Kubernetes', 'AWS'].map((tech) => (
                    <span class="px-3 py-1 rounded-full bg-zinc-500/20 text-[var(--text-secondary)] text-sm">{tech}</span>
                  ))}
                </div>
              </GlassCard>

              <GlassCard client:visible hover={false}>
                <p class="text-[var(--text-muted)] text-xs uppercase tracking-wider mb-3">Data & ML</p>
                <div class="flex flex-wrap gap-2">
                  {['PySpark', 'OpenCV'].map((tech) => (
                    <span class="px-3 py-1 rounded-full bg-zinc-500/20 text-[var(--text-secondary)] text-sm">{tech}</span>
                  ))}
                </div>
              </GlassCard>
            </div>
          </section>

          <!-- Education Section -->
          <section id="education" class="py-16">
            <h2 class="text-2xl font-bold text-[var(--text-primary)] mb-6">Education</h2>
            <div class="max-w-2xl">
              <GlassCard client:visible hover={false}>
                <div class="flex items-start gap-4">
                  <div class="w-12 h-12 rounded-lg bg-zinc-700 flex items-center justify-center flex-shrink-0">
                    <span class="text-zinc-50 font-bold text-sm">BITS</span>
                  </div>
                  <div>
                    <h4 class="font-semibold text-[var(--text-primary)]">Birla Institute of Technology and Science, Pilani</h4>
                    <p class="text-[var(--text-secondary)] text-sm">B.Tech, Electronics and Instrumentation</p>
                    <p class="text-[var(--text-muted)] text-sm">2016 – 2020 · Grade: 8.87</p>
                    <p class="text-[var(--text-muted)] text-sm mt-1">Controls department of Technical fest - Quark</p>
                  </div>
                </div>
              </GlassCard>
            </div>
          </section>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
