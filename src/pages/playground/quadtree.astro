---
import BaseLayout from '../../layouts/BaseLayout.astro';
import QuadtreeIndex from '../../components/playground/geo/QuadtreeIndex';
import WavyGradient from '../../components/ui/WavyGradient';
---

<BaseLayout title="Quadtree Geospatial Index | Playground" description="Interactive visualization of quadtree spatial indexing for location-based queries">
  <WavyGradient client:load />
  <section class="py-12 px-4">
    <div class="max-w-6xl mx-auto">
      <div class="mb-8">
        <a href="/playground" class="text-zinc-500 hover:text-zinc-300 text-sm inline-flex items-center gap-2 mb-4">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
          </svg>
          Back to Playground
        </a>
        <h1 class="text-3xl md:text-4xl font-bold text-[var(--text-primary)] mb-3">
          Quadtree Geospatial Index
        </h1>
        <p class="text-[var(--text-secondary)] max-w-3xl">
          Quadtrees enable efficient spatial queries by recursively partitioning 2D space.
          Essential for ride-matching, finding nearby drivers, and location-based services.
        </p>
      </div>

      <QuadtreeIndex client:load />
    </div>
  </section>
</BaseLayout>
