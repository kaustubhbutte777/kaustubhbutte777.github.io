---
import BaseLayout from '../../layouts/BaseLayout.astro';
import SystemDesignVisualizer from '../../components/playground/system-design/SystemDesignVisualizer';
---

<BaseLayout title="System Design | Playground" description="Interactive system architecture visualizations">
  <section class="py-12 px-4">
    <div class="max-w-7xl mx-auto">
      <div class="mb-8">
        <a href="/playground" class="text-zinc-600 hover:text-zinc-300 text-sm flex items-center gap-1">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
          </svg>
          Back to Playground
        </a>
      </div>

      <SystemDesignVisualizer client:load />
    </div>
  </section>
</BaseLayout>
