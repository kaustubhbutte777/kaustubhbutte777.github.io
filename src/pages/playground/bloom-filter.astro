---
import BaseLayout from '../../layouts/BaseLayout.astro';
import BloomFilter from '../../components/playground/datastructures/BloomFilter';
import WavyGradient from '../../components/ui/WavyGradient';
---

<BaseLayout title="Bloom Filter | Playground" description="Interactive visualization of Bloom filters - probabilistic set membership data structure">
  <WavyGradient client:load />
  <section class="py-12 px-4">
    <div class="max-w-6xl mx-auto">
      <div class="mb-8">
        <a href="/playground" class="text-zinc-500 hover:text-zinc-300 text-sm inline-flex items-center gap-2 mb-4">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
          </svg>
          Back to Playground
        </a>
        <h1 class="text-3xl md:text-4xl font-bold text-[var(--text-primary)] mb-3">
          Bloom Filter
        </h1>
        <p class="text-[var(--text-secondary)] max-w-3xl">
          A space-efficient probabilistic data structure for set membership queries.
          It can tell you if an element is definitely NOT in a set, or PROBABLY in a set.
        </p>
      </div>

      <BloomFilter client:load />
    </div>
  </section>
</BaseLayout>
