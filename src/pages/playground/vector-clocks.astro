---
import BaseLayout from '../../layouts/BaseLayout.astro';
import VectorClocks from '../../components/playground/distributed/VectorClocks';
import WavyGradient from '../../components/ui/WavyGradient';
---

<BaseLayout title="Vector Clocks | Playground" description="Interactive visualization of vector clocks for causality tracking in distributed systems">
  <WavyGradient client:load />
  <section class="py-12 px-4">
    <div class="max-w-6xl mx-auto">
      <div class="mb-8">
        <a href="/playground" class="text-zinc-500 hover:text-zinc-300 text-sm inline-flex items-center gap-2 mb-4">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
          </svg>
          Back to Playground
        </a>
        <h1 class="text-3xl md:text-4xl font-bold text-[var(--text-primary)] mb-3">
          Vector Clocks
        </h1>
        <p class="text-[var(--text-secondary)] max-w-3xl">
          Vector clocks track causality in distributed systems. They determine if events are
          causally related (one happened-before another) or concurrent (no causal ordering).
        </p>
      </div>

      <VectorClocks client:load />
    </div>
  </section>
</BaseLayout>
