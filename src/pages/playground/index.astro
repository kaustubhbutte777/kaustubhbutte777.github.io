---

<BaseLayout title="Playground | Kaustubh Butte" description="Interactive distributed systems visualizations and demos">
  <section class="py-12 px-4">
    <div class="max-w-6xl mx-auto">
      <div class="text-center mb-12">
        <h1 class="text-4xl md:text-5xl font-bold mb-4">
          <span class="gradient-text-animated">Playground</span>
        </h1>
        <p class="text-gray-400 text-lg max-w-2xl mx-auto">
          Interactive visualizations demonstrating distributed systems concepts,
          database internals, and system design patterns.
        </p>
      </div>

      <!-- Category Pills -->
      <div class="flex flex-wrap justify-center gap-2 mb-8">
        {categories.map((cat) => (
          <span class="px-4 py-2 rounded-full glass text-sm text-gray-300">
            {cat}
          </span>
        ))}
      </div>

      <!-- Demo Grid -->
      <div class="grid md:grid-cols-2 gap-6">
        {demos.map((demo) => (
          <a href={demo.href} class="group block">
            <GlassCard client:visible className="h-full hover:border-indigo-500/50 transition-all duration-300">
              <div class="flex items-start gap-4">
                <div class="text-4xl">{demo.icon}</div>
                <div class="flex-1">
                  <div class="flex items-center gap-2 mb-2">
                    <span class="px-2 py-1 text-xs rounded-full bg-indigo-500/20 text-indigo-400">
                      {demo.category}
                    </span>
                  </div>
                  <h2 class="text-xl font-semibold text-white mb-2 group-hover:text-indigo-400 transition-colors">
                    {demo.title}
                  </h2>
                  <p class="text-gray-400 text-sm mb-4">
                    {demo.description}
                  </p>
                  <div class="flex flex-wrap gap-2">
                    {demo.tags.map((tag) => (
                      <span class="px-2 py-1 text-xs rounded bg-white/5 text-gray-500">
                        {tag}
                      </span>
                    ))}
                  </div>
                </div>
              </div>
            </GlassCard>
          </a>
        ))}
      </div>

    </div>
  </section>
</BaseLayout>
