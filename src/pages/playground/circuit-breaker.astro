---
import BaseLayout from '../../layouts/BaseLayout.astro';
import CircuitBreakerWithMetrics from '../../components/playground/resilience/CircuitBreakerWithMetrics';
import WavyGradient from '../../components/ui/WavyGradient';
---

<BaseLayout title="Circuit Breaker + Rate Limiter | Playground" description="Interactive resilience patterns with real-time metrics dashboard">
  <WavyGradient client:load />
  <section class="py-12 px-4">
    <div class="max-w-6xl mx-auto">
      <div class="mb-8">
        <a href="/playground" class="text-zinc-500 hover:text-zinc-300 text-sm inline-flex items-center gap-2 mb-4">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
          </svg>
          Back to Playground
        </a>
        <h1 class="text-3xl md:text-4xl font-bold text-[var(--text-primary)] mb-3">
          Circuit Breaker + Rate Limiter
        </h1>
        <p class="text-[var(--text-secondary)] max-w-3xl">
          Resilience patterns with real-time metrics. Watch throughput, latency percentiles (P50/P95/P99),
          and error rates change as the circuit breaker trips and recovers.
        </p>
      </div>

      <CircuitBreakerWithMetrics client:load />
    </div>
  </section>
</BaseLayout>
