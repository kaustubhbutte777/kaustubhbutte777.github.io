---
import BaseLayout from '../layouts/BaseLayout.astro';
import GlassCard from '../components/ui/GlassCard';

const projects = [
  {
    title: "Project Alpha",
    description: "A high-performance distributed system for real-time data processing",
    tags: ["Go", "Kafka", "PostgreSQL"],
    github: "https://github.com",
    demo: "https://example.com",
    image: "/assets/project1.png"
  },
  {
    title: "Project Beta",
    description: "Full-stack web application with modern React and Node.js backend",
    tags: ["React", "Node.js", "MongoDB"],
    github: "https://github.com",
    demo: "https://example.com",
    image: "/assets/project2.png"
  },
  {
    title: "Project Gamma",
    description: "CLI tool for automating development workflows",
    tags: ["Rust", "CLI", "Automation"],
    github: "https://github.com",
    image: "/assets/project3.png"
  },
  {
    title: "Project Delta",
    description: "Machine learning pipeline for predictive analytics",
    tags: ["Python", "TensorFlow", "AWS"],
    github: "https://github.com",
    image: "/assets/project4.png"
  },
];
---

<BaseLayout title="Projects | Portfolio" description="Showcase of my software engineering projects">
  <section class="py-12 px-4">
    <div class="max-w-6xl mx-auto">
      <div class="text-center mb-12">
        <h1 class="text-4xl md:text-5xl font-bold mb-4">
          <span class="gradient-text-animated">Projects</span>
        </h1>
        <p class="text-gray-400 text-lg max-w-2xl mx-auto">
          A collection of things I've built and worked on
        </p>
      </div>

      <div class="grid md:grid-cols-2 gap-6">
        {projects.map((project, index) => (
          <GlassCard client:visible className="group overflow-hidden">
            <div class="aspect-video bg-gradient-to-br from-indigo-500/20 to-purple-500/20 rounded-lg mb-4 flex items-center justify-center">
              <span class="text-6xl opacity-50">ðŸš€</span>
            </div>

            <div class="flex flex-wrap gap-2 mb-3">
              {project.tags.map((tag) => (
                <span class="px-2 py-1 text-xs rounded-full bg-indigo-500/20 text-indigo-400">
                  {tag}
                </span>
              ))}
            </div>

            <h3 class="text-xl font-semibold text-white mb-2 group-hover:text-indigo-400 transition-colors">
              {project.title}
            </h3>

            <p class="text-gray-400 mb-4">
              {project.description}
            </p>

            <div class="flex items-center gap-4">
              <a
                href={project.github}
                target="_blank"
                rel="noopener noreferrer"
                class="inline-flex items-center gap-2 text-sm text-gray-400 hover:text-white transition-colors"
              >
                <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                  <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd" />
                </svg>
                Code
              </a>
              {project.demo && (
                <a
                  href={project.demo}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="inline-flex items-center gap-2 text-sm text-gray-400 hover:text-white transition-colors"
                >
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                  </svg>
                  Demo
                </a>
              )}
            </div>
          </GlassCard>
        ))}
      </div>
    </div>
  </section>
</BaseLayout>
