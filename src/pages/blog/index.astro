---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';
import WavyGradient from '../../components/ui/WavyGradient';

const posts = await getCollection('blog');
const sortedPosts = posts.sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());

// Separate featured post (latest) from rest
const featuredPost = sortedPosts[0];
const otherPosts = sortedPosts.slice(1);
---

<BaseLayout title="Blog | Kaustubh Butte" description="Technical articles and thoughts on software engineering">
  <WavyGradient client:load />
  <!-- Hero Section -->
  <section class="relative py-20 px-4 overflow-hidden">
    <!-- Background decoration -->
    <div class="absolute inset-0 -z-10">
      <div class="absolute top-0 left-1/4 w-96 h-96 bg-zinc-500/5 rounded-full blur-3xl"></div>
      <div class="absolute bottom-0 right-1/4 w-80 h-80 bg-zinc-400/5 rounded-full blur-3xl"></div>
    </div>

    <div class="max-w-6xl mx-auto">
      <div class="text-center mb-16">
        <span class="inline-block px-4 py-1.5 rounded-full glass text-sm text-[var(--text-muted)] mb-6">
          Technical Writing
        </span>
        <h1 class="text-5xl md:text-6xl lg:text-7xl font-bold mb-6">
          <span class="gradient-text-animated">Blog</span>
        </h1>
        <p class="text-[var(--text-secondary)] text-lg md:text-xl max-w-2xl mx-auto leading-relaxed">
          Deep dives into distributed systems, database internals, and software engineering best practices.
        </p>
      </div>

      {sortedPosts.length === 0 ? (
        <div class="text-center py-20">
          <div class="glass-strong inline-block p-12 rounded-3xl">
            <div class="w-16 h-16 mx-auto mb-4 rounded-full bg-zinc-700/30 flex items-center justify-center">
              <svg class="w-8 h-8 text-[var(--text-muted)]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z" />
              </svg>
            </div>
            <h2 class="text-2xl font-semibold text-[var(--text-primary)] mb-3">Coming Soon</h2>
            <p class="text-[var(--text-secondary)] max-w-md">
              Blog posts are being crafted. Subscribe to get notified when new content is published.
            </p>
          </div>
        </div>
      ) : (
        <>
          {/* Featured Post */}
          {featuredPost && (
            <a href={`/blog/${featuredPost.slug}`} class="group block mb-12">
              <article class="relative glass-strong rounded-3xl overflow-hidden transition-all duration-500 hover:scale-[1.02] hover:shadow-2xl hover:shadow-zinc-900/20">
                <div class="absolute inset-0 bg-gradient-to-br from-zinc-500/10 via-transparent to-zinc-600/10 opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
                <div class="relative p-8 md:p-12">
                  <div class="flex flex-wrap items-center gap-3 mb-6">
                    <span class="px-3 py-1 rounded-full bg-zinc-500/20 text-zinc-400 text-xs font-medium uppercase tracking-wider">
                      Featured
                    </span>
                    {featuredPost.data.tags?.slice(0, 2).map((tag: string) => (
                      <span class="px-3 py-1 rounded-full bg-zinc-700/30 text-zinc-500 text-xs">
                        {tag}
                      </span>
                    ))}
                  </div>
                  <h2 class="text-3xl md:text-4xl font-bold text-[var(--text-primary)] mb-4 group-hover:text-zinc-400 transition-colors duration-300">
                    {featuredPost.data.title}
                  </h2>
                  <p class="text-[var(--text-secondary)] text-lg leading-relaxed mb-6 max-w-3xl">
                    {featuredPost.data.description}
                  </p>
                  <div class="flex items-center gap-6 text-sm text-[var(--text-muted)]">
                    <span class="flex items-center gap-2">
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                      </svg>
                      {new Date(featuredPost.data.date).toLocaleDateString('en-US', {
                        year: 'numeric',
                        month: 'long',
                        day: 'numeric'
                      })}
                    </span>
                    <span class="flex items-center gap-2">
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                      </svg>
                      {featuredPost.data.readTime || '5 min read'}
                    </span>
                  </div>
                  <div class="absolute bottom-8 right-8 md:bottom-12 md:right-12 opacity-0 group-hover:opacity-100 transform translate-x-2 group-hover:translate-x-0 transition-all duration-300">
                    <svg class="w-6 h-6 text-zinc-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                    </svg>
                  </div>
                </div>
              </article>
            </a>
          )}

          {/* Posts Grid */}
          {otherPosts.length > 0 && (
            <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
              {otherPosts.map((post) => (
                <a href={`/blog/${post.slug}`} class="group block">
                  <article class="h-full glass rounded-2xl overflow-hidden transition-all duration-300 hover:scale-[1.03] hover:shadow-xl hover:shadow-zinc-900/10 hover:bg-[var(--glass-bg-hover)]">
                    <div class="p-6">
                      <div class="flex flex-wrap items-center gap-2 mb-4">
                        {post.data.tags?.slice(0, 1).map((tag: string) => (
                          <span class="px-2.5 py-1 rounded-full bg-zinc-700/30 text-zinc-500 text-xs">
                            {tag}
                          </span>
                        ))}
                        <span class="text-xs text-[var(--text-muted)]">
                          {post.data.readTime || '5 min read'}
                        </span>
                      </div>
                      <h3 class="text-xl font-semibold text-[var(--text-primary)] mb-3 line-clamp-2 group-hover:text-zinc-400 transition-colors duration-300">
                        {post.data.title}
                      </h3>
                      <p class="text-[var(--text-secondary)] text-sm leading-relaxed line-clamp-3 mb-4">
                        {post.data.description}
                      </p>
                      <div class="flex items-center justify-between pt-4 border-t border-[var(--glass-border)]">
                        <span class="text-xs text-[var(--text-muted)]">
                          {new Date(post.data.date).toLocaleDateString('en-US', {
                            month: 'short',
                            day: 'numeric',
                            year: 'numeric'
                          })}
                        </span>
                        <span class="text-zinc-500 group-hover:text-zinc-400 transition-colors">
                          <svg class="w-5 h-5 transform group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                          </svg>
                        </span>
                      </div>
                    </div>
                  </article>
                </a>
              ))}
            </div>
          )}

          {/* Only featured post, no grid */}
          {otherPosts.length === 0 && featuredPost && (
            <div class="text-center mt-12">
              <p class="text-[var(--text-muted)]">More posts coming soon...</p>
            </div>
          )}
        </>
      )}
    </div>
  </section>
</BaseLayout>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
